extends ../layout

block content
  a(href='/bicicletas')| &lt;Volver
  h2 Editando bicicleta
  br

  form(method='post', action=`/bicicletas/${bici.id}/update`)
    div.form-row
      div.form-group.col-auto
        label(for='id')| ID
        input#id.form-control(type='text', name='id', placeholder='ID', value=bici.id)
    div.form-row
      div.form-group.col-auto
        label(for='color')| Color
        input#id.form-control(type='text', name='color', placeholder='Color', value=bici.color)
    div.form-row
      div.form-group.col-auto
        label(for='modelo')| Modelo
        input#id.form-control(type='text', name='modelo', placeholder='Modelo', value=bici.modelo)
    div.form-row
      div.form-group.col-auto
        label(for='lat')| Latitud
        input#id.form-control(type='text', name='lat', placeholder='Latitud', value=bici.ubicacion[0])
      div.form-group.col-auto
        label(for='lng')| Longitud
        input#id.form-control(type='text', name='lng', placeholder='Longitud', value=bici.ubicacion[1])
    div.form-row
      div.form-group.col-auto
        button.btn.btn-primary.mb-2(type='submit')| Editar
